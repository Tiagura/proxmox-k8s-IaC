{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["custom.regex", "terraform"],
  "terraform": {
    "managerFilePatterns": ["^terraform/.*\\.tf$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Manage versions in Ansible role defaults",
      "managerFilePatterns": ["^ansible/roles/.*/defaults/main\\.ya?ml$"],
      "matchStrings": [
        "(?<depName>[a-zA-Z0-9_]+)_version:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["cilium"],
      "packageName": "cilium/cilium",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Cilium must track matching Cilium release versions."]
    },
    {
      "matchPackageNames": ["cilium_cli"],
      "packageName": "cilium/cilium-cli",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Cilium CLI must track matching Cilium release versions."]
    },
    {
      "matchPackageNames": ["cni"],
      "packageName": "containernetworking/plugins",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Ensure CNI plugins are compatible with Kubernetes minor version."]
    },
    {
      "matchPackageNames": ["containerd"],
      "packageName": "containerd/containerd",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Ensure containerd release is compatible with targeted Kubernetes minor version."]
    },
    {
      "matchPackageNames": ["crictl"],
      "packageName": "kubernetes-sigs/cri-tools",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["crictl should track the CRI API version supported by kubelet/Kubernetes."]
    },
    {
      "matchPackageNames": ["gateway_api"],
      "packageName": "kubernetes-sigs/gateway-api",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Gateway API evolves independently — verify CRDs match target Kubernetes minor."]
    },
    {
      "matchPackageNames": ["k8s_release"],
      "packageName": "kubernetes/kubernetes",
      "versioning": "semver",
      "separateMinorPatch": true,
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["k8s_release (kube-apiserver) is the source of truth for cluster version."]
    },
    {
      "matchPackageNames": ["k8s_service_release"],
      "packageName": "kubernetes/release",
      "versioning": "semver",
      "separateMinorPatch": true,
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["kubeadm/kubelet service files must match the same minor as kube-apiserver."]
    },
    {
      "matchPackageNames": ["kubectl"],
      "packageName": "kubernetes/kubectl",
      "versioning": "semver",
      "separateMinorPatch": true,
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["kubectl must be within ±1 minor of kube-apiserver (k8s_release)."]
    },
    {
      "matchPackageNames": ["runc"],
      "packageName": "opencontainers/runc",
      "versioning": "semver",
      "patch": { "automerge": true, "automergeType": "pr" },
      "minor": { "automerge": false },
      "prBodyNotes": ["Ensure runc release is compatible with containerd used by the cluster."]
    }
  ]
}